<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.forgotpassword.ForgotPasswordActivity">

    <Button
        android:id="@+id/btResetPassword"
        style="@style/custom_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/btResetPassword"
        app:layout_constraintEnd_toEndOf="@+id/edEmailReset"
        app:layout_constraintStart_toStartOf="@+id/edEmailReset"
        app:layout_constraintTop_toBottomOf="@+id/edEmailReset" />

    <TextView
        android:id="@+id/tvForgotPasswordTitle"
        style="@style/custom_label_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/btResetPassword"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <EditText
        android:id="@+id/edEmailReset"
        style="@style/custom_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="e-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/tvForgotPasswordTitle"
        app:layout_constraintStart_toStartOf="@+id/tvForgotPasswordTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvForgotPasswordTitle" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="205dp"
        android:layout_height="100dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clean_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>